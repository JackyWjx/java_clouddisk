<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzb.org.dao.ProductLineMapper">
    <!--显示产品线列表-->
    <select id="queryProductLineList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
        plid,
        cname,
        linedesc,
        summary
        from
        tb_product_line
        <where>
            <choose>
                <when test="status != null and status != ''">
                    status = #{status}
                </when>
                <otherwise>
                    status = '1'
                </otherwise>
            </choose>
        </where>
    </select>

    <!--获取产品线的总数-->
    <select id="queryProductLineCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT
        count(1)
        from
        tb_product_line
    </select>

    <!--获取状态为2的产线线ID-->
    <select id="queryProductLineId" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
        plid
        from
        tb_product_line
        where
        status = '2'
    </select>

    <!--修改产品线信息-->
    <update id="updateProductLine" parameterType="java.util.Map">
        UPDATE
        tb_product_line
        SET
        ouid = #{uid},
        updtime = #{updtime}
        <if test="status!= null ">,status = #{status}</if>
        <if test="cname!= null ">,cname = #{cname}</if>
        <if test="addtime!= null ">,addtime = #{addtime}</if>
        <if test="linedesc!= null ">,linedesc = #{linedesc}</if>
        WHERE
        plid = ${plid}
    </update>

    <!--电脑端-全界面-记支宝电脑端下全界面显示企业下所有产品的菜单列表-->
    <select id="queryCompanyMenuList" parameterType="java.util.Map" resultType="java.util.Map">
        WITH RECURSIVE menu AS (
        SELECT
        m.pid,
        m.mid,
        m.parentid,
        m.cname,
        m.menupath,
        m.icon,
        m.photo,
        m.summary,
        m.idx
        FROM
        tb_company_product c
        LEFT JOIN
        tb_product_menu m
        ON
        c.pid = m.pid
        WHERE
        m.parentid = '000000000000000'
        AND c.status = #{status}
        AND c.cid = #{cid}
        AND c.ptype = #{ptype}
        UNION ALL
        SELECT
        tpm.pid,
        tpm.mid,
        tpm.parentid,
        tpm.cname,
        tpm.menupath,
        tpm.icon,
        tpm.photo,
        tpm.summary,
        tpm.idx
        FROM
        tb_product_menu tpm
        JOIN menu ON tpm.parentid = menu.mid
        AND tpm.status = #{status}
        )
        SELECT
        menu.*
        FROM
        menu
        ORDER BY
        menu.idx ASC
    </select>

    <!--记支宝电脑端下新建产品线-->
    <insert id="insertProductLine" parameterType="java.util.Map">
        INSERT INTO
        tb_product_line (plid, cname, linedesc, idx, ouid, addtime, updtime, status, summary)
        VALUES
        (
        ${plid},
        #{cname},
        <choose>
            <when test="linedesc != null and linedesc != ''">
                #{linedesc},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
            <when test="idx != null and idx != ''">
                #{idx},
            </when>
            <otherwise>
                (select count(1)+1 from tb_product_line),
            </otherwise>
        </choose>
        #{uid},
        #{addtime},
        #{updtime},
        <choose>
            <when test="status != null and status != ''">
                #{status},
            </when>
            <otherwise>
                '1',
            </otherwise>
        </choose>
        <choose>
            <when test="summary != null and summary != ''">
                #{summary}
            </when>
            <otherwise>
                null
            </otherwise>
        </choose>
        )
    </insert>

    <!--电脑端-全界面-记支宝电脑端下全界面显示菜单下的所有页面-->
    <select id="queryProductPageList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
        mid,
        icon,
        pageid,
        pagecode,
        cname,
        pagepath,
        summary
        from
        tb_product_page
        where
        status = #{status}
        and
        pid = #{pid}
        and
        mid = #{mid}
    </select>

    <!--电脑端-全界面-记支宝电脑端下全界面修改页面或者删除页面-->
    <update id="updateProductPage" parameterType="java.util.Map">
        UPDATE
        tb_product_page
        SET
        ouid = #{uid},
        updtime = #{updtime}
        <if test="cname!= null ">,cname = #{cname}</if>
        <if test="icon!= null ">,icon = #{icon}</if>
        <if test="pagepath!= null ">,pagepath = #{pagepath}</if>
        <if test="pagecode!= null ">,pagecode = #{pagecode}</if>
        <if test="status!= null ">,status = #{status}</if>
        <if test="summary!= null ">,summary = #{summary}</if>
        WHERE
        pageid = #{pageid}
        AND pid = #{pid}
        AND mid = #{mid}
    </update>

    <!--电脑端-全界面-记支宝电脑端下全界面根据页面名称模糊搜索页面-->
    <select id="searchProductPageList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
        p.pageid,
        p.mid,
        p.pagecode,
        p.cname,
        p.icon,
        p.pagepath,
        p.summary
        from
        tb_company_product c
        LEFT JOIN
        tb_product_page p
        ON
        c.pid = p.pid
        where
        c.status = #{status}
        and
        c.ptype = #{ptype}
        and
        p.cname like CONCAT('%',#{cname},'%')
    </select>

    <!--根据分页获取菜单信息-->
    <select id="queryProductMenuList" parameterType="java.util.Map" resultType="java.util.Map">
        WITH RECURSIVE menu AS (
        SELECT
        pid,
        mid,
        parentid,
        cname,
        menupath,
        icon,
        photo,
        summary,
        idx
        FROM
        tb_product_menu
        WHERE
        <choose>
            <when test="mid != null and mid != ''">
                mid = #{mid}
            </when>
            <otherwise>
                parentid = '000000000000000'
            </otherwise>
        </choose>
        AND status = '1'
        AND pid = #{pid}
        UNION ALL
        SELECT
        tpm.pid,
        tpm.mid,
        tpm.parentid,
        tpm.cname,
        tpm.menupath,
        tpm.icon,
        tpm.photo,
        tpm.summary,
        tpm.idx
        FROM
        tb_product_menu tpm
        JOIN menu ON tpm.parentid = menu.mid
        AND tpm.status = '1'
        AND tpm.pid = #{pid}
        )
        SELECT
        menu.*
        FROM
        menu
        ORDER BY
        menu.idx ASC
    </select>

    <!--加入产品菜单表-->
