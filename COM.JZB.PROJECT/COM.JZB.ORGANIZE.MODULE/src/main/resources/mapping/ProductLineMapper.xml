        SELECT
        l.pid,
        l.cname,
        l.logo,
        l.photo,
        p.weburl,
        p.manurl,
        p.ptype,
        p.limitday,
        l.summary
        from
        tb_product_list l
        LEFT JOIN
        tb_company_product p
        ON
        l.pid = p.pid
        where
        l.status = #{status}
        and
        l.plid = ${plid}
        and
        l.cid = #{cid}
        and
        p.ptype = #{ptype}
    </select>

