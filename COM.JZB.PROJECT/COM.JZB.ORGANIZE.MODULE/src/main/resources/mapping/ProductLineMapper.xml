        INSERT INTO
        tb_product_menu (pid, mid, parentid, cname, menupath, icon, photo, idx, addtime, updtime, status, summary)
        VALUES
        (
        #{pid},
        #{mid},
        <choose>
            <when test="parentid != null and parentid != ''">
                #{parentid},
            </when>
            <otherwise>
                #{mid},
            </otherwise>
        </choose>
        #{cname},
        #{menupath},
        <choose>
            <when test="icon != null and icon != ''">
                #{icon},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
            <when test="photo != null and photo != ''">
                #{photo},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        ${idx},
        #{addtime},
        #{updtime},
        <choose>
