<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzb.org.dao.NewTbTrackUserListMapper">

    <select id="queryTrackUserListByKey" resultType="java.util.Map" parameterType="java.util.Map">
        select trackcontent ,abdialogue,nextadvance from tb_track_user_list where status='1'
        <choose><when test="uid != null || uid != ''">and  customer = #{uid}</when></choose>
        <choose><when test="cid != null || cid != ''">and trackvalue = #{cid}</when></choose>
        <choose><when test="projectid != null || projectid != ''">and trackproid = #{projectid}</when></choose>
        <choose><when test="trtime != null || trtime != ''">and tracktime between #{begDate} and #{endDate} </when></choose>
        limit #{pagesize}  offset #{pageno}
    </select>

    <select id="countTrackUserListByKey" resultType="java.lang.Integer" parameterType="java.util.Map">
        select count(1) from tb_track_user_list where status='1'
        <choose><when test="uid != null || uid != ''">and customer = #{uid}</when></choose>
        <choose><when test="cid != null || cid != ''">and trackcid = #{cid}</when></choose>
        <choose><when test="trtime != null || trtime != ''">and tracktime = #{trtime}</when></choose>
    </select>

</mapper>
