            </otherwise>
        </choose>
        <choose>
            <when test="pid != null">
                #{pid},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
            <when test="pricetype != null">
                cast(#{pricetype} as integer),
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
            <when test="itemid != null">
                #{itemid},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
            <when test="itemname != null">
                #{itemname},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
