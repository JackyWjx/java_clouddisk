<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzb.resource.dao.TbStandardTypeMapper">
    <!--标准中菜单分类的新建-->
    <insert id="saveStandardType" parameterType="java.util.Map">
        insert into
        tb_standard_type(typeid,cname,parentid,typedesc,idx,adduid,addtime,upduid,updtime,status,summary)
        values
        (
        #{typeid},
        #{cname},
        <choose>
            <when test="parentid != null">
                #{parentid},
            </when>
            <otherwise>
                0000000,
            </otherwise>
        </choose>
        <choose>
            <when test="typedesc != null">
                #{typedesc},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        <choose>
            <when test="idx != null">
                #{idx},
            </when>
            <otherwise>
                (select count(1)+1 from tb_standard_type),
            </otherwise>
        </choose>
        #{adduid},
        #{addtime},
        <choose>
            <when test="upduid != null">
                #{upduid},
            </when>
            <otherwise>
                null,
            </otherwise>
        </choose>
        #{updtime},
        <choose>
            <when test="status != null">
                #{status},
            </when>
            <otherwise>
                1,
            </otherwise>
        </choose>
        <choose>
            <when test="summary != null">
                #{summary}
            </when>
            <otherwise>
                null
            </otherwise>
        </choose>
        )
    </insert>
    <!--标准中菜单分类的修改-->
    <update id="updateStandardType" parameterType="java.util.Map">
        update
        tb_standard_type
        set
        <if test="cname != null">cname=#{cname},</if>
        <if test="parentid != null">parentid=#{parentid},</if>
        <if test="typedesc != null">typedesc=#{typedesc},</if>
        <if test="upduid != null">upduid=#{upduid},</if>
        <if test="updtime != null">updtime=#{updtime},</if>
        <if test="status != null">status=#{status},</if>
        <if test="summary != null">summary=#{summary}</if>
        where
        typeid=#{typeid}
    </update>

    <!--设置删除状态-->
    <update id="updateStatus" parameterType="java.util.Map">
        update tb_standard_type set status=#{status} where typeid=#{typeid}
    </update>

    <!--查询运营管理中的菜单类别-->
    <select id="getStandardType" parameterType="java.util.Map" resultType="java.util.Map">
        select ID,typeid,cname,typedesc,adduid,addtime,summary from tb_standard_type where status = #{status}
        <if test="typeid != null">
            and typeid = #{typeid}
        </if>
    </select>
</mapper>