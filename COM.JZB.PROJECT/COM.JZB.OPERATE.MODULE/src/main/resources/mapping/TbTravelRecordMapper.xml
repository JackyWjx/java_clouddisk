    <!-- 获取归我审批的出差记录-->
    <select id="queryMyVerifyTravel" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            travelid,
            curcid,
            cname,
            travedesc,
            tarcity,
            tarcid,
            tarname,
            relperson,
            relphone,
            projectid,
            project,
            starttime,
            finishtime,
            METHOD,
            fare,
            expenses,
            amount,
            participants,
            speed,
            speeddesc,
            payfare,
            payexpenses,
            times,
            nexttime,
            status,
            summary
        FROM tb_travel_record
        where 1=1
        <if test="beginTime != '' and beginTime !=null ">
            and starttime &gt;= #{beginTime}
        </if>
        <if test="endTime != null and endTime != '' ">
            and finishtime &lt;= #{endTime}
        </if>
        <if test="uid !='' and uid!=null">
            and uid=#{uid}
        </if>
        <if test="status !='' and status!=null">
            and status=#{status}
        </if>
    </select>



