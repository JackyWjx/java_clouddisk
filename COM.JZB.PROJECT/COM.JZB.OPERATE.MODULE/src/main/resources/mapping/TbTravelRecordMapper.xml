            payfare,
            payexpenses,
            times,
            nexttime,
            status,
            summary
        FROM tb_travel_record
        where 1=1
        <foreach collection="list" item="travel" separator=",">
            <choose>
                <when test="travel.travelid != '' and travel.travelid != null">
